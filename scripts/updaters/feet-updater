#!/bin/bash
feet_version_old=$(cat "/home/$USER/.feetversion")



cd /home/$USER/
mkdir .feetupdater
cd .feetupdater
curl -lo https://jamisonsmith.is-a.dev/scripts/feet-version
feet_version_new=$(cat feet-version)
if [ "$feet_version_new" = "$feet_version_old" ]; then 
    echo "No update needed. $feet_version_old"
fi
curl -l -o feet-update https://jamisonsmith.is-a.dev/scripts/FEet
sudo cp ./feet-update /usr/bin/feet
echo "Updated maybe successfully, try feet --help to see the new version"
cd ..
rm -rf .feetupdater